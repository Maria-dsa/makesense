<div class="modal" id="modal-first-decision">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            {{ form_start(form) }}
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-1-square"> Ajouter ma première décision</i></h5>
            </div>
            <div class="modal-body">
                {{ form_widget(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal"><i class="bi bi-x-lg"> Annuler</i>
                </button>
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg"> Ajouter ma première décision</i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
