{% extends 'base.html.twig' %}

{% block title %}Mes décisions - Makesense{% endblock %}

{% block body %}


<div class="container">
    <h2>Mes décisions</h2>
    <div class="jumbotron bg-secondary">
        <div class="container">
            {{ form_start(form) }}
            <div class="row justify-content-center custom-line">
                    <div class ="row justify-content-center custom-line m-3">
                        <h3 class="text-center">Filtrer par statut en cours :</h3>
                    </div>
                    <div class ="row justify-content-center custom-line align-items-end">
                        <div class="col col-sm-10 col-md-5 col-lg-3 m-3">
                        {{ form_row(form.search) }}
                        </div>
                        <div class="col col-sm-10 col-md-5 col-lg-3 m-3 align-items-end">
                            <button class="btn btn-primary">Rechercher</button>
                        </div>
                    </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row justify-content-center custom-line">
    {% for decision in decisions %}
        <div class="card col-sm-10 col-md-5 col-lg-3 m-3">
            {% for timeline in decision.timelines %}
                {% if loop.first %}
                    <div class="card-header bg-transparent border-secondary">
                        {{ timeline.name }}
                        <br>Le : {{ timeline.endedAt |date('d/m/Y') }}
                    </div>
                {% endif %}
            {% endfor %}
            <div class="card-body text-success">
                <h5 class="card-title">{{ decision.title }}</h5>
            </div>
            <div class="card-footer bg-transparent border-secondary">
                <br><a href="{{ path('app_decision_show', {id: decision.id }) }}"
                       class="stretched-link"></a>
            </div>

        </div>
            {% else %}
    <h3>Aucune décision</h3>

    {% endfor %}
    </div>


    <div class ="d-flex justify-content-center">
        {% do decisions.setPageRange(2) %}
        {{ knp_pagination_render(decisions, 'include/_pagination.html.twig') }}
    </div>
</div>

{% endblock %}
