{% extends 'base.html.twig' %}

{% block title %}Mes décisions - Makesense{% endblock %}

{% block body %}


<div class="container">
    <h1>Mes décisions</h1>
    <div class="jumbotron bg-primary m-1 rounded-4">
        <div class="container">
            {{ form_start(form) }}
            <div class="row justify-content-center custom-line">
                    <div class ="row justify-content-center custom-line m-3">
                        <h3 class="text-center text-secondary text">Filtrer par statut en cours :</h3>
                    </div>
                    <div class ="row justify-content-center custom-line align-items-end">
                        <div class="col col-sm-10 col-md-5 col-lg-3 m-3">
                        {{ form_row(form.search) }}
                        </div>
                        <div class="col col-sm-10 col-md-5 col-lg-3 m-3 pb-3 align-items-end">
                            <button class="btn btn-secondary text-primary"><i class="bi bi-search"> Rechercher</i></button>
                        </div>
                    </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row justify-content-center custom-line">
    {% for decision in decisions %}
        <div class="card col-sm-10 col-md-5 col-lg-3 m-3">
            {% for timeline in decision.timelines %}
                {% if loop.first %}
                    <div class="card-header bg-transparent border-primary">
                        {{ timeline.name }}
                        <br><i class="bi bi-calendar2-week-fill text-success "> Le : {{ timeline.endedAt |date('d/m/Y') }}</i>
                    </div>
                {% endif %}
            {% endfor %}
            <div class="card-body text-primary">
                <h5 class="card-title">{{ decision.title }}</h5>
            </div>
            <div class="card-footer bg-transparent border-primary">
                <br><a href="{{ path('app_decision_show', {id: decision.id }) }}"
                       class="stretched-link"></a>
            </div>

        </div>
            {% else %}
    <p>Aucune décision</p>

    {% endfor %}
    </div>


    <div class ="d-flex justify-content-center">
        {{ knp_pagination_render(decisions) }}
    </div>
</div>

{% endblock %}
