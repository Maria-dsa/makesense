<div class="modal" id="modal-conflict">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            {{ form_start(form) }}
            <div class="modal-header modal-conflit">
                <h5 class="modal-title"><i class="bi bi-backspace-reverse"> Ajouter un conflit</i></h5>
            </div>
            <div class="modal-body">
                {{ form_widget(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-conflit"
                        data-bs-dismiss="modal"><i class="bi bi-x-lg"> Annuler</i>
                </button>
                <button type="submit" class="btn btn-submit"><i class="bi bi-check-lg"> Ajouter mon conflit</i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
