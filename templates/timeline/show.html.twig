{% extends 'base.html.twig' %}

{% block title %}Timeline{% endblock %}

{% block body %}
    <h1>Timeline</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ timeline.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ timeline.name }}</td>
            </tr>
            <tr>
                <th>StartedAt</th>
                <td>{{ timeline.startedAt ? timeline.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndedAt</th>
                <td>{{ timeline.endedAt ? timeline.endedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_timeline_index') }}">back to list</a>

    <a href="{{ path('app_timeline_edit', {'id': timeline.id}) }}">edit</a>

    {{ include('timeline/_delete_form.html.twig') }}
{% endblock %}
